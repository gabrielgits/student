<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
</head>

<style media="screen">
    @import url('https://fonts.googleapis.com/css2?family=Andika:ital,wght@0,400;0,700;1,400;1,700&family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap');

  *,
  *:before,
  *:after {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }

  /* body {
    font-family: 'Andika', sans-serif;
  } */

  .background {
    width: 430px;
    height: 520px;
    position: absolute;
    transform: translate(-50%, -50%);
    left: 50%;
    top: 50%;
  }

  .background .shape {
    height: 200px;
    width: 200px;
    position: absolute;
    border-radius: 50%;
  }

  .shape:first-child {
    background: linear-gradient(#3969d8,
    #42be66);
    left: -80px;
    top: -80px;
  }

  .shape:last-child {
    background: linear-gradient(to right,
        #c04ff4,
        #42be66);
    right: -30px;
    bottom: -80px;
  }

  form {
    width: 400px;
    background-color: #42be66;
    position: absolute;
    transform: translate(-50%, -50%);
    top: 50%;
    left: 50%;
    border-radius: 30px;
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.1);
    /* box-shadow: 0 0 40px rgba(8, 7, 16, 0.6); */
    padding: 50px 35px;
  }

  form * {
    font-family: 'Andika', sans-serif;
    color: #ffffff;
    letter-spacing: 0.5px;
    outline: none;
    border: none;
  }

  form h3 {
    font-size: 32px;
    font-weight: 500;
    line-height: 30px;
    text-align: center;
  }

  label {
    display: block;
    margin-top: 10px;
    font-size: 16px;
    font-weight: 500;
  }

  input {
    display: block;
    height: 50px;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.07);
    border-radius: 25px;
    padding: 0 10px;
    font-size: 14px;
    font-weight: 300;
  }

  ::placeholder {
    color: #e5e5e5;
  }

  button {
    margin-top: 35px;
    width: 100%;
    background-color: #ffffff;
    color: #2B9A4A;
    padding: 15px 0;
    font-size: 18px;
    font-weight: 600;
    border-radius: 25px;
    cursor: pointer;
  }
</style>


<body>
  <!-- <div class="background">
    <div class="shape"></div>
    <div class="shape"></div>
  </div> -->
  <!-- <div style="align-items: end; text-align: end;">
    <button id="signupButton">Sign Up</button>
  </div> -->

  <div id="main">
    <form action="/login" method="post">
      <h3>Login</h3>
      <br/>
      <label for="">Username</label>
      <br>
      <input type="text" placeholder="Username" name="username">
      <br>
      <label for="">Password</label>
      <br>
      <input type="password" placeholder="Password" name="password">
      <br>
      <% if (flashMessage) { %>
      <p style="color: #FFD580">
        <%= flashMessage %>
      </p>
      <% } %>
      <button>Login</button>
      <label style="text-align: right; font-size: 15px;">Don't have account?&nbsp;<a href="/signup">Signup</a></label>
    </form>
  </div>

</body>

